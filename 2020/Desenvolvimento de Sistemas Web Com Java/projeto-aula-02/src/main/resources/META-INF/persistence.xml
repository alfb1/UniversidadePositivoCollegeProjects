<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="aulaweb2020" transaction-type="RESOURCE_LOCAL">
        <description>
            Conex√£o com o mysql
        </description>
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>br.edu.up.sistemapedido.entity.Cliente</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <!-- 
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/aulaweb2020?serverTimezone=UTC" />
             -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/aulaweb2020?serverTimezone=UTC" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="root" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>

    </persistence-unit>

</persistence>